#!/bin/bash

function help {
	case "$1" in
		1)
			;;
		2)
			echo "Devuelve todas las vistas que hay en el sistema."
			;;
	esac
}

function call {
	if [ "$1" == "help" ]; then
		help 2
		exit 0
	fi

	for path in ${VIEW_PATH}; do
		expanded_path=$(bash -c "echo $path")
		pushd "$expanded_path" 2> /dev/null > /dev/null
		if [ $? = 0 ]; then
			for i in *.view; do
				if [ "$i" != '*.view' ]; then
					echo ${i/.view/}
				fi
			done
			popd > /dev/null
		fi
	done
}
